<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F0E0">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/rectangle_25"
                    android:tint="#BA00331F"
                    tools:ignore="UseAppTint" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="45dp"
                    android:text="Welcome"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:textColor="@android:color/white"
                    android:textSize="45sp"
                    android:textAlignment="center"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:text="to the world of Augmented Reality "
                    android:fontFamily="sans-serif-light"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="130dp"
                    android:fontFamily="sans-serif-light"
                    android:text="Transform Reality with the Power of Augmented Vision"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/logoutbtn"
                    android:layout_width="34dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="207dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/logoutbtn"
                    android:tint="#F2F0E0" />
            </FrameLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                android:layout_gravity="center"
                android:backgroundTint="#FFFFFF">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Discover a new dimension of interaction and experience the world like never before. Our AR app seamlessly blends digital content with the real world, enhancing your surroundings with immersive visuals, engaging animations, and interactive elements. "
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="serif"
                        tools:ignore="MissingConstraints" />

                    <Button
                        android:id="@+id/trybtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_marginBottom="4dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:text="Try it now"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.502"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView10" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                android:layout_gravity="center"
                android:backgroundTint="#FFFFFF">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView12"
                        android:layout_width="360dp"
                        android:layout_height="227dp"
                        android:src="@drawable/furniture"
                        android:scaleType="fitXY"
                        tools:layout_editor_absoluteX="-2dp"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:fontFamily="serif"
                        android:padding="10dp"
                        android:text="In today's ever-evolving world of interior design, furniture shopping has transcended traditional brick-and-mortar experiences, thanks to the emergence of augmented reality (AR) technology."
                        android:textColor="@color/colorPrimary"
                        app:layout_constraintTop_toBottomOf="@+id/imageView12"
                        tools:ignore="MissingConstraints" />

                    <Button
                        android:id="@+id/ARfurniture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_margin="2dp"
                        android:layout_marginBottom="4dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:text="Try AR Furniture"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toBottomOf="@+id/textView14" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                android:layout_gravity="center"
                android:backgroundTint="#FFFFFF">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="360dp"
                        android:layout_height="227dp"
                        android:src="@drawable/makeup"
                        tools:layout_editor_absoluteX="-2dp"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:fontFamily="serif"
                        android:padding="10dp"
                        android:text="In today's fast-paced digital world, the beauty industry is embracing innovative technologies to revolutionize the way we discover, experiment with, and purchase makeup products. One such breakthrough is virtual try-on."
                        android:textColor="@color/colorPrimary"
                        app:layout_constraintTop_toBottomOf="@+id/imageView10"
                        tools:ignore="MissingConstraints" />

                    <Button
                        android:id="@+id/ARmakeup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_margin="2dp"
                        android:layout_marginBottom="4dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:text="Try AR Makeup"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toBottomOf="@+id/textView12" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="25dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                android:layout_gravity="center"
                android:backgroundTint="#FFFFFF">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="360dp"
                        android:layout_height="227dp"
                        android:src="@drawable/walltexture"
                        android:scaleType="fitXY"
                        tools:layout_editor_absoluteX="-2dp"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:fontFamily="serif"
                        android:padding="10dp"
                        android:text="Your walls are more than just structural elements; they are canvases waiting to be transformed into expressions of your style and personality."
                        android:textColor="@color/colorPrimary"
                        app:layout_constraintTop_toBottomOf="@+id/imageView11"
                        tools:ignore="MissingConstraints" />

                    <Button
                        android:id="@+id/ARwalltexture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_margin="2dp"
                        android:layout_marginBottom="4dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:text="Try AR Wall Texture"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toBottomOf="@+id/textView13" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
